{
  "name": "url-shortener-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "pnpm install",

    "//--- DEVELOPMENT ---//": "",
    "dev": "concurrently \"pnpm:dev:backend\" \"pnpm:dev:frontend\"",
    "dev:backend": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:down": "docker-compose -f docker-compose.yml down",

    "//--- PRODUCTION ---//": "",
    "build": "pnpm --filter \"./apps/**\" run build",
    "prod:up": "docker-compose -f docker-compose.prod.yml up --build -d",
    "prod:down": "docker-compose -f docker-compose.prod.yml down",
    
    "//--- DATABASE ---//": "",
    "migration:generate": "pnpm --filter backend run migration:generate",
    "migration:run": "pnpm --filter backend run migration:run",
    "migration:revert": "pnpm --filter backend run migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
